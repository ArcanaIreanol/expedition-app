<quest title="Test Quest" data-line="0">
  <roleplay title="Test" id="start" data-line="2">
    <p>{{one=1}}</p>
    <p>You face choices. Here's the value of one: {{one}}</p>
    <choice text="Fight">
      <combat data-line="10">
        <e>Thief</e>
        <e>Thief</e>
        <e>Imp</e>
        <event on="round">
          <roleplay title="" data-line="18">
            <p>A round card during combat!</p>
            <p>Current round: {{_.currentCombatRound()}}</p>
            <p>Surge round: {{string(_.isCombatSurgeRound())}}</p>
            <p>Random enemy: {{_.randomEnemy()}}</p>
            <choice text="A choice to another RP card">
              <roleplay title="" data-line="28">
                <p>More text!</p>
              </roleplay>
            </choice>
            <choice text="A choice with a non-combat GOTO">
              <trigger data-line="32">goto start</trigger>
            </choice>
            <choice text="End the quest">
              <trigger data-line="36">end</trigger>
            </choice>
          </roleplay>
        </event>
        <event on="win">
          <trigger data-line="40">end</trigger>
        </event>
        <event on="lose">
          <trigger data-line="44">end</trigger>
        </event>
      </combat>
    </choice>
    <choice text="Go to start">
      <trigger data-line="48">goto start</trigger>
    </choice>
    <choice text="End now">
      <trigger data-line="52">end</trigger>
    </choice>
  </roleplay>
</quest>
