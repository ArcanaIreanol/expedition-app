<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="1003003" id="io.fabricate.expedition" version="1.3.3" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Expedition</name>
    <description>
    The Companion App for Expedition: The Roleplaying Card Game.
  </description>
    <author email="contact@fabricate.io" href="http://fabricate.io">
    FabricateIO
  </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />
    <preference name="Fullscreen" value="true" />
    <preference name="BackgroundColor" value="0x00000000" />
    <preference name="Orientation" value="portrait" />
    <icon height="36" src="www/images/icon/36x36.png" width="36" />
    <icon height="48" src="www/images/icon/48x48.png" width="48" />
    <icon height="72" src="www/images/icon/72x72.png" width="72" />
    <icon height="96" src="www/images/icon/96x96.png" width="96" />
    <icon height="144" src="www/images/icon/144x144.png" width="144" />
    <icon height="192" src="www/images/icon/192x192.png" width="192" />
    <gap:plugin name="cordova-plugin-googleplus" source="npm">
        <param name="REVERSED_CLIENT_ID" value="io.fabricate.expedition" />
    </gap:plugin>
    <preference name="android-minSdkVersion" value="21" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash density="port-ldpi" src="app/images/splash/320x426.png" />
        <splash density="port-mdpi" src="app/images/splash/320x470.png" />
        <splash density="port-hdpi" src="app/images/splash/480x640.png" />
        <splash density="port-xhdpi" src="app/images/splash/720x960.png" />
    </platform>
    <gap:config-file parent="/manifest" platform="android">
        <application android:debuggable="true" />
    </gap:config-file>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="29" src="app/images/icon/29x29.png" width="29" />
        <icon height="50" src="app/images/icon/50x50.png" width="50" />
        <icon height="57" src="app/images/icon/57x57.png" width="57" />
        <icon height="58" src="app/images/icon/58x58.png" width="58" />
        <icon height="60" src="app/images/icon/60x60.png" width="60" />
        <icon height="76" src="app/images/icon/76x76.png" width="76" />
        <icon height="100" src="app/images/icon/100x100.png" width="100" />
        <icon height="114" src="app/images/icon/114x114.png" width="114" />
        <icon height="120" src="app/images/icon/120x120.png" width="120" />
        <icon height="152" src="app/images/icon/152x152.png" width="152" />
        <icon height="180" src="app/images/icon/180x180.png" width="180" />
        <splash height="480" src="app/images/splash/320x480.png" width="320" />
        <splash height="960" src="app/images/splash/640x960.png" width="640" />
        <splash height="1024" src="app/images/splash/768x1024.png" width="768" />
        <splash height="2048" src="app/images/splash/1536x2048.png" width="1536" />
        <splash height="1136" src="app/images/splash/Default-568h@2x.png" width="640" />
        <splash height="1334" src="app/images/splash/750x1334.png" width="750" />
        <splash height="2208" src="app/images/splash/1242x2208.png" width="1242" />
    </platform>
    <plugin name="cordova-plugin-googleplus" spec="https://github.com/EddyVerbruggen/cordova-plugin-googleplus">
        <variable name="REVERSED_CLIENT_ID" value="com.googleusercontent.apps.545484140970-lgcbm3df469kscbngg2iof57muj3p588" />
    </plugin>
    <plugin name="cordova-plugin-firebase" spec="~0.1.18" />
    <plugin name="cordova-plugin-insomnia" spec="https://github.com/EddyVerbruggen/Insomnia-PhoneGap-Plugin.git" />
    <plugin name="cordova-plugin-vibration" spec="~2.1.3" />
</widget>
