<?xml version='1.0' encoding='utf-8'?>
<widget id="io.fabricate.expedition" version="1.2.0" android-versionCode="1002000" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
  <name>Expedition</name>
  <description>
    The Companion App for Expedition: The Roleplaying Card Game.
  </description>
  <author email="contact@fabricate.io" href="http://fabricate.io">
    FabricateIO
  </author>
  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" spec="1" />

  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <allow-navigation href="http://*/*" />
  <allow-navigation href="https://*/*" />
  <allow-navigation href="data:*" />

  <preference name="Fullscreen" value="true" />
  <preference name="BackgroundColor" value="0x00000000" />
  <preference name="Orientation" value="portrait" />

  <icon src="www/images/icon/36x36.png" width="36" height="36" />
  <icon src="www/images/icon/48x48.png" width="48" height="48" />
  <icon src="www/images/icon/72x72.png" width="72" height="72" />
  <icon src="www/images/icon/96x96.png" width="96" height="96" />
  <icon src="www/images/icon/144x144.png" width="144" height="144" />
  <icon src="www/images/icon/192x192.png" width="192" height="192" />

  <!-- Authentication -->
  <gap:plugin name="cordova-plugin-googleplus" source="npm">
    <param name="REVERSED_CLIENT_ID" value="io.fabricate.expedition" />
  </gap:plugin>
  <plugin name="cordova-plugin-googleplus" spec="~5.1.1">
    <variable name="REVERSED_CLIENT_ID" value="io.fabricate.expedition" />
  </plugin>


  <!-- Android -->
  <preference name="android-minSdkVersion" value="21"/> //android 5.0
  <platform name="android">
    <allow-intent href="market:*" />

    <splash src="app/images/splash/320x426.png" density="port-ldpi"/>
    <splash src="app/images/splash/320x470.png" density="port-mdpi"/>
    <splash src="app/images/splash/480x640.png" density="port-hdpi"/>
    <splash src="app/images/splash/720x960.png" density="port-xhdpi"/>
  </platform>
  <gap:config-file platform="android" parent="/manifest">
    <application android:debuggable="true" />
  </gap:config-file>

  <!-- iOS -->
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />

    <icon src="app/images/icon/29x29.png" width="29" height="29" />
    <icon src="app/images/icon/50x50.png" width="50" height="50" />
    <icon src="app/images/icon/57x57.png" width="57" height="57" />
    <icon src="app/images/icon/58x58.png" width="58" height="58" />
    <icon src="app/images/icon/60x60.png" width="60" height="60" />
    <icon src="app/images/icon/76x76.png" width="76" height="76" />
    <icon src="app/images/icon/100x100.png" width="100" height="100" />
    <icon src="app/images/icon/114x114.png" width="114" height="114" />
    <icon src="app/images/icon/120x120.png" width="120" height="120" />
    <icon src="app/images/icon/152x152.png" width="152" height="152" />
    <icon src="app/images/icon/180x180.png" width="180" height="180" />

    <splash src="app/images/splash/320x480.png" width="320" height="480"/>
    <splash src="app/images/splash/640x960.png" width="640" height="960"/>
    <splash src="app/images/splash/768x1024.png" width="768" height="1024"/>
    <splash src="app/images/splash/1536x2048.png" width="1536" height="2048"/>
    <splash src="app/images/splash/Default-568h@2x.png" width="640" height="1136"/>
    <splash src="app/images/splash/750x1334.png" width="750" height="1334"/>
    <splash src="app/images/splash/1242x2208.png" width="1242" height="2208"/>
  </platform>
</widget>
